{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["@cloudflare/workers-types", "bun"],
    "moduleResolution": "node",
    "isolatedModules": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "noEmit": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
